#include <unistd.h>

void ft_putchar(int c)
{
	write(1, &c, 1);
}

void ft_putnbr(int nb)
{
	if(nb >= 10)
	{
		ft_putnbr(nb % 10);
	}
	else
	{
		ft_putchar(nb + '0');
	}
}

int main()
{
	ft_putnbr(-2147483648);
	return 0;
}
